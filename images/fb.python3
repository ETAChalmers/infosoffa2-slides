width = 1920
height = 1080


with open("/dev/fb0", "wb") as fb0:
    line = bytearray(4 * width)
    for y in range(height):
        for x in range(width):

            line[4 * x] = x % 256
            line[4 * x + 1] = x % 256
            line[4 * x + 2] = x % 256
            line[4 * x + 3] = 0

        fb0.write(line)
        fb0.flush()

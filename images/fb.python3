width = 1920
height = 1080


with open("/dev/fb0", "wb") as fb0:
    line = bytearray(4 * width)
    for y in range(height):
        for x in range(width):
            line[4 * x] = 0xff
            line[4 * x + 1] = 0x00
            line[4 * x + 2] = int((255 * x) / width)

        fb0.write(line)
        fb0.flush()

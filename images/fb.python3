width = 1920
height = 1080


with open("/dev/fb0", "wb") as fb0:
    line = bytearray(4 * width)
    for y in range(height):
        for x in range(width):
            c = int((255 * x) / width)

            line[4 * x] = c
            line[4 * x + 1] = 255 - c
            line[4 * x + 2] = c
            line[4 * x + 3] = 0

        fb0.write(line)
        fb0.flush()

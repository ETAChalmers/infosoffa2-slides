import mmap

width = 1920
height = 1080

with open("/dev/fb0", "wb") as fb0:
    mapped = mmap.mmap(fb0.fileno(), 0)
    fb0.flush()


    for y in range(height):
        for x in range(width):
            mapped[3 * (y * width + x)] = 0x00
            mapped[3 * (y * width + x) + 1] = 0xff
            mapped[3 * (y * width + x) + 2] = 0x99

    fb0.flush()
